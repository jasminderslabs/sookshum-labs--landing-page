---
const { title, src, content, width, height } = Astro.props;
---

<div
  class='w-auto xxl:w-[544px] h-fit bg-[#282828B2] rounded-[20px] lg:rounded-4xl relative flex flex-col card card-animate dropdown-bg dropdown-shadow-button'
>
  <div class='relative w-full h-auto mb-20 xl:mb-0 xl:h-32.5'>
    <img
      src={src}
      alt='feature-card-logo'
      width={width}
      height={height}
      class='absolute -top-16 -left-10 right-0 m-auto object-contain h-[147px] lg:h-[176px] xl:h-auto'
    />
  </div>
  <div
    class='px-[9px] pb-[14px] pt-8 xl:pt-0 lg:px-4 lg:pb-8 flex flex-col gap-3'
  >
    <span
      class='text-white block relative md:text-[14px] lg:text-[20px] xl:text-[26px] font-medium font-poppins capitalize'
      >{title}</span
    >
    <p class='text-[#F8F8F8B2] text-[12px] lg:text-[14px] xl:text-[16px]'>
      {content}
    </p>
    <!-- <button
      class='bg-[#282828B8] cursor-pointer opacity-70 text-white rounded-full w-fit py-3 px-8 mt-4 border-[0.5px] border-[#282828B2] font-bold'
    >
      Learn More
    </button> -->
  </div>
</div>
