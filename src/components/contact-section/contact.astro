---
import { ArrowUpRight } from "@lucide/astro";
---

<section
  class='max-w-480 min-h-130.5 mx-auto px-5 md:px-10 xl:px-20 lg:py-22.5 xl:pt-30'
>
  <div
    class='w-full flex flex-col md:flex-row items-center rounded-3xl md:rounded-4xl bg-[#282828B2] gap-5 dark-btn-shadow dropdown-bg dropdown-shadow-button relative h-[650px] md:h-auto'
  >
    <div
      class='text-white w-full py-7 px-7 md:ml-7 lg:ml-[69px] md:py-8 md:px-0 lg:py-18 md:max-w-[320px] xl:max-w-[395px]'
    >
      <div class='flex flex-col justify-between gap-4 xl:gap-7.5 w-full'>
        <h2
          class='text-4xl md:text-5xl text-[28px] md:text-[36px] lg:text-[52px] xl:text-7xl font-semibold text-left hero-heading
          leading-[33px] md:leading-[40px] lg:leading-[57px] lg:pb-2 xl:leading-[88px] tracking-tight w-full'
        >
          Letâ€™s Work Together
        </h2>
        <p class='text-[14px] xl:text-lg opacity-55 shrink'>
          Contact us today to collaborate and bring your vision to life with
          expert guidance and innovative solutions.
        </p>
      </div>
      <div
        class='py-0 px-5 xl:px-6 h-12 xl:h-13.75 flex items-center rounded-full bg-[#E68624] cursor-pointer transition-all dark-bg duration-700 hover:[backdrop-filter:blur(100px)] dark-btn-shadow w-fit xl:mt-16.5 mt-[30px] md:mt-[50px]'
      >
        <button
          class='w-full h-full font-medium text-[13px] xl:text-[16px] flex justify-between items-center gap-1 text-white'
        >
          Request a quote <ArrowUpRight size={16} />
        </button>
      </div>
    </div>

    <span
      class='block absolute top-75 right-65 md:-top-5 md:right-55 lg:right-90 xl:-top-5 xl:right-115 bg-red-200 w-10.5 h-10.5 lg:w-13 lg:h-13 xl:h-18 xl:w-18 rounded-full'
      style='background: linear-gradient(rgb(255, 156, 0) 0%, rgb(245, 99, 0) 100%)'
    ></span>
    <span
      class='w-4.5 h-4.5 lg:w-6 lg:h-6 xl:w-8.5 xl:h-8.5 rounded-full shadow-2xl absolute bottom-15 right-80
      md:bottom-8 md:right-66 lg:right-110 xl:bottom-25 xl:right-130'
      style='background: linear-gradient(206.92deg, rgb(255, 255, 255) 59.29%, rgb(153, 153, 153) 85.78%);'
    ></span>
    <span
      class='h-8 w-8 md:bottom-3 md:right-5 lg:w-10.5 lg:h-10.5 xl:w-13 xl:h-13 rounded-full shadow-2xl absolute bottom-5 right-20 lg:-bottom-3 lg:right-23'
      style='background: linear-gradient(206.92deg, rgb(255, 255, 255) 59.29%, rgb(153, 153, 153) 85.78%);'
    ></span>

    <img
      src='/work-together.webp'
      alt='work-together-image'
      width='750'
      height='700'
      class='relative md:absolute md:-right-12 md:bottom-0 md:top-0 mx-auto max-w-[280px] md:max-w-[400px] lg:max-w-[590px] xl:max-w-[750px]'
    />
  </div>
</section>
