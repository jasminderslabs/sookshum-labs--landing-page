---
import { ArrowUpRight } from "@lucide/astro";
import OurServices from "./footer-services.astro";
import Company from "./footer-company.astro";
import Address from "./footer-address.astro";
import SocialLinks from "./social-links.astro";
import Button from "../button/Button.astro";
---

<section class='max-w-480 xl:mt-20 bg-[#282828B8] flex flex-col mx-auto'>
  <div
    class='md:w-[90%] md:mx-5 lg:m-20 flex flex-col items-center md:items-start w-full md:flex-row justify-between flex-wrap gap-5 md:gap-10 lg:gap-20'
  >
    <div
      class='text-white w-full sm:w-[50%] md:w-[35%] lg:w-[25%] flex flex-col md:items-start items-center gap-10 py-10 md:p-0 text-base md:text-sm'
    >
      <span class='inline-block'>
        <img
          src='sookshum-logo.svg'
          alt='sookshum-logo'
          width='155'
          height='45'
          class='object-contain'
        />
      </span>
      <p class='text-center text-base md:text-sm'>
        We deliver excellence through our innovative solutions and exceptionally
        reliable service.
      </p>
      <div class='w-full flex lg:flex-row flex-col gap-3 items-center shrink-0'>
        <div
          class='py-0 px-5 xl:px-6 h-12 xl:h-13.75 flex items-center rounded-full bg-[#E68624] cursor-pointer transition-all dark-bg duration-700 hover:[backdrop-filter:blur(100px)] dark-btn-shadow w-fit mt-7.5 xl:mt-16.5'
        >
          <button
            class='w-full h-full font-medium text-[13px] xl:text-[16px] flex justify-between items-center gap-1 text-white'
          >
            Request a quote <ArrowUpRight size={16} />
          </button>
        </div>
        <Button text='Refer us' />
      </div>
    </div>
    <OurServices />
    <Company />
    <Address />
  </div>
  <div class='flex justify-center items-center'>
    <SocialLinks />
  </div>
</section>
