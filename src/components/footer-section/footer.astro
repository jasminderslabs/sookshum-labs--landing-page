---
import { ArrowUpRight } from "@lucide/astro";
import OurServices from "./footer-services.astro";
import Company from "./footer-company.astro";
import Address from "./footer-address.astro";
import SocialLinks from "./social-links.astro";
import Button from "../button/Button.astro";
---

<section
  class='max-w-480 bg-[#151515] flex flex-col mx-auto gap-5 md:gap-3 lg:gap-[70px]'
>
  <div
    class='flex flex-col items-center md:items-start w-full md:flex-row justify-between flex-wrap
    xl:px-20.25 md:pt-15 xlg:pt-21.25 px-10 pt-20 sm:gap-0 gap-5'
  >
    <div
      class='text-white flex flex-col md:items-start items-center gap-5 md:p-0 text-base md:text-sm max-w-75 xl:max-w-88.5'
    >
      <span class='inline-block w-[128px] md:w-46.5'>
        <img
          src='sookshum-logo.svg'
          alt='sookshum-logo'
          class='object-fill h-full w-full'
        />
      </span>
      <p
        class='text-[13px] lg:text-[14px] xl:text-[16px] opacity-85 sm:text-left text-center md:leading-[20px] xl:leading-[24px]'
      >
        We deliver excellence through our innovative solutions and exceptionally
        reliable service.
      </p>
      <div
        class='w-full flex flex-row justify-center sm:justify-start gap-3 items-center shrink-0'
      >
        <div
          class='px-5 xl:px-6 flex items-center rounded-full bg-[#E68624] cursor-pointer transition-all dark-bg duration-700 hover:[backdrop-filter:blur(100px)] dark-btn-shadow w-fit h-12 xl:h-13.75'
        >
          <button
            class='w-full h-full font-medium text-[13px] xl:text-[16px] flex justify-between items-center gap-1 text-white'
          >
            Request a quote <ArrowUpRight size={16} />
          </button>
        </div>
      </div>
    </div>
    <OurServices />
    <Company />
    <Address />
  </div>
  <div class='flex justify-center items-center px-5 sm:px-10 xl:px-20.25'>
    <SocialLinks />
  </div>
</section>
