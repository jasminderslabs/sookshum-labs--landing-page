---
const star = "/Filled.png";
const stars = Array.from({ length: 5 }, (_, i) => star);
const { title, name, review } = Astro.props;
---

<div
  class='testimonial-animate shrink-0 p-px rounded-4xl text-white
         max-w-full md:max-w-[80%] md:h-[300px] lg:h-auto lg:max-w-[60%] xl:max-w-[60%] transition-all duration-1000 relative xl:max-h-74.5 dark-btn-shadow dropdown-bg dropdown-shadow-button hover:bg-linear-to-br! from-[#e6862466] via-transparent to-[#e6862466]
         card-animate-on-touch'
>
  <div
    class='testimonial-card w-full h-full bg-transparent relative overflow-hidden p-2.5 sm:py-4 sm:px-3 xl:py-8 xl:px-4 rounded-4xl dark-btn-shadow dropdown-bg dropdown-shadow-button flex flex-col gap-4 sm:gap-5 z-auto'
  >
    <div class='flex items-center gap-2 w-full relative z-999 pl-3'>
      {
        stars.map((path) => (
          <img
            src={path}
            class='w-4 h-4 md:w-6 md:h-6 object-contain'
            alt='star'
          />
        ))
      }
    </div>

    <p
      class='px-3 text-[10px] sm:text-[13px] lg:text-[14px] xl:text-[16px] font-light leading-relaxed wrap-break-word grow relative z-999'
    >
      "{review}"
    </p>

    <div class='flex items-center gap-4 grow-0 relative z-999 pl-3'>
      <img
        src='/lady.png'
        class='w-12 h-12 rounded-full object-cover shrink-0'
        alt='avatar'
      />
      <div class='flex flex-col'>
        <span class='font-medium text-sm lg:text-base xl:text-[19px]'
          >{name}</span
        >
        <span class='text-[10px] xl:text-base font-light md:text-sm opacity-70'
          >{title}</span
        >
      </div>
    </div>
  </div>
</div>
