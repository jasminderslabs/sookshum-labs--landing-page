---
const star = "/Filled.png";
const stars = Array.from({ length: 5 }, (_, i) => star);
const { title, name, review } = Astro.props;
---

<div
  class='testimonial-card shrink-0 relative flex flex-col gap-5 p-6 rounded-4xl bg-[#282828B2] text-white
         w-[95%] md:w-[65%] lg:w-[50%] min-h-75 h-auto overflow-hidden'
>
  <div class='flex items-center gap-2 w-full'>
    {
      stars.map((path) => (
        <img
          src={path}
          class='w-5 h-5 md:w-6 md:h-6 object-contain'
          alt='star'
        />
      ))
    }
  </div>

  <p class='text-sm md:text-base leading-relaxed wrap-break-word grow'>
    "{review}"
  </p>

  <div class='flex items-center gap-4 grow-0'>
    <img
      src='/lady.png'
      class='w-12 h-12 rounded-full object-cover shrink-0'
      alt='avatar'
    />
    <div class='flex flex-col'>
      <span
        class='font-bold text-sm md:text-base'
        style='font-family: Rubik;'
        >{name}</span
      >
      <span
        class='text-xs md:text-sm opacity-70'
        style='font-family: Inter;'
        >{title}</span
      >
    </div>
  </div>

  <span
    class='absolute inset-0 -top-full -left-full w-full h-full bg-white/10 rounded-4xl pointer-events-none'
  >
  </span>
</div>

<style>
  .testimonial-card:hover > span {
    left: 0;
    top: 0;
    transition: all 0.5s ease-in;
    background: linear-gradient(
      to left top,
      transparent,
      transparent 40%,
      rgba(230, 134, 36, 0.23) 100%
    );
    filter: grayscale(0);
  }
</style>
