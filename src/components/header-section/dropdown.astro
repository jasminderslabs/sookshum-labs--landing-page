---
import { ChevronRight } from "@lucide/astro";
const navigations = [
  "ecommerce development",
  "web app development",
  "mobile app development",
  "ui/ux design",
  "low code development",
  "admin development",
  "headless cms development",
  "website development",
];
---

<div
  class='max-w-[1920px] md:block hidden border border-[#ffffff1a] border-t-0 rounded-bl-4xl rounded-br-4xl mx-auto lg:pt-[34px] lg:px[40px] xl:px-[80px] px-5 md:px-10 w-full max-h-0 invisible bg-[#151515] overflow-hidden absolute left-0 right-0 top-[100%] dropdown z-50 flex'
>
  <div
    class='flex justify-between w-full gap-10 relative gap-[14px] sm:gap-4 xl:py-[32px] lg:gap-[20px] xl:gap-[105px]'
  >
    {/** first option */}
    <div class='text-white font-black poppins-regular flex flex-col gap-2 grow'>
      {
        navigations.map((text, index) => {
          return (
            <span class='services-dropdown block flex w-full dropdown-shadow-border  capitalize h-[72px]  lg:py-4 lg:pl-8 lg:pr-[26px] rounded-full items-center justify-between gap-10 text-sm shrink-0 hover:text-white text-gray-400'>
              {text}
              <ChevronRight class='text-gray-400 hover:text-white' />
            </span>
          );
        })
      }
    </div>
    <div
      class='flex justify-between gap-[14px] sm:gap-4 lg:gap-[20px] xl:gap-[105px] sm:w-[63.79%] w-[46.7%]'
    >
      <div
        class='link-container flex flex-col sm:grow items-start gap-[14px] w-full pl-2 sm:p-0 sm:w-fit'
      >
        <span
          class='flex w-full text-white capitalize bg-[#1c1c1c] hover:bg-[#ffffff1a] hover:transition-all hover:duration-500 p-0 sm:p-4 gap-4
            rounded-[32px] items-center text-sm sm:text-base xl:text-[18px]'
          style='box-shadow : 2px 4px 16px 0px #f8f8f80f inset;'
        >
          <span class='w-[60px] h-[60px] rounded-2xl inline-block'>
            <img
              src='/shopify.webp'
              class='object-contain w-full h-full'
            />
          </span>
          Shopify
        </span>
        <span
          class='flex w-full text-white capitalize bg-[#1c1c1c] hover:bg-[#ffffff1a] transition-all duration-500 p-0 sm:p-4 gap-4
            rounded-[32px] items-center text-sm sm:text-base xl:text-[18px]'
          style='box-shadow : 2px 4px 16px 0px #f8f8f80f inset;'
        >
          <span class='w-[60px] h-[60px] rounded-2xl inline-block'>
            <img
              src='/shopify.webp'
              class='object-contain w-full h-full'
            />
          </span>
          Shopify
        </span>
      </div>

      <div
        class='p-4 rounded-4xl w-fit h-fit gap-2 flex flex-col bg-[#1c1c1c]'
        style='box-shadow : 2px 4px 16px 0px #f8f8f80f inset;'
      >
        <div
          class='flex flex-col xl:h-[180px] xl:w-[316px] w-[232px] h-[190px] rounded-[32px] cursor-pointer'
        >
          <video
            src='/let-connect.webm'
            id='video'
            class='object-cover w-full h-full z-1 rounded-4xl'
          ></video>
        </div>
        <span
          class='font-poppins sm:text-base text-sm font-normal xl:text-[18px] w-full text-white capitalize'
          >Let's create a project.</span
        >
      </div>
    </div>
  </div>
</div>
