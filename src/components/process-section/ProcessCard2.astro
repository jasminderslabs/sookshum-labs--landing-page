---
const { src, title, content } = Astro.props;
---

<div
  class='relative bg-[#282828B2] gap-2 pb-6 xl:pb-8 rounded-4xl md:w-[50%] card flex flex-col justify-between'
>
  <div class='flex justify-center items-center w-full h-full video-container'>
    <video
      src={src}
      loop
      muted
      class='object-cover h-full w-full rounded-4xl'
    ></video>
  </div>
  <div class='w-full text-white flex flex-col gap-2 px-5 xl:px-8 xl:gap-[10px]'>
    <h3
      class='hero-heading text-[14px] lg:text-[16px] xl:text-[19px] capitalize'
    >
      {title}
    </h3>
    <p class='opacity-70 text-[13px] lg:text-[14px] xl:text-[16px]'>
      {content}
    </p>
  </div>
</div>
