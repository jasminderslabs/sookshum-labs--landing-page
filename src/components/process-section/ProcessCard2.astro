---
const { src, title, content } = Astro.props;
---

<div
  class='relative bg-[#282828B2] gap-2 pb-6 xl:pb-8 rounded-4xl md:w-[50%] card hover:bg-linear-to-br! from-[#e6862466] via-transparent to-[#e6862466]'
>
  <div
    class='w-full h-full rounded-[20px] bg-[#1c1c1c] md:rounded-4xl pb-6 xl:pb-8 xl:gap-2 flex flex-col justify-between dark-btn-shadow dropdown-bg dropdown-shadow-button video-card'
  >
    <div class='flex justify-center items-center video-container'>
      <video
        src={src}
        muted
        class='object-cover h-full w-full rounded-4xl'
      ></video>
    </div>
    <div
      class='w-full text-white flex flex-col justify-end gap-2 px-5 xl:px-8 xl:gap-2.5 grow h-full'
    >
      <h3
        class='hero-heading text-[14px] lg:text-[16px] xl:text-[19px] capitalize'
      >
        {title}
      </h3>
      <p class='opacity-70 text-[13px] lg:text-[14px] xl:text-[16px]'>
        {content}
      </p>
    </div>
  </div>
</div>
