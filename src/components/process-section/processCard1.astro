---
const { src, title, content, index, height } = Astro.props;
---

<div
  class=` rounded-[20px] lg:rounded-4xl pb-6 xl:pb-8 card bg-[#282828B2] flex-col justify-between dark-btn-shadow dropdown-bg   overflow-hidden dropdown-shadow-button ${index === 3 ? 'lg:hidden' : 'flex'} hover:bg-linear-to-br! from-[#e6862466] via-transparent to-[#e6862466] card-animate-on-touch grayscale`
>
  <div
    class='w-full h-full rounded-[20px] bg-[#1c1c1c] overflow-hidden
    lg:rounded-4xl pb-6 xl:pb-8 gap-3 xl:gap-4 flex flex-col video-card justify-between'
  >
    <div class='video-container w-full flex justify-center'>
      <video
        muted
        src={src}
        width='320'
        height='240'
        class=`w-full  ${index === 0 ? 'object-cover sm:object-cover' : 'object-cover'} rounded-4xl  ${index === 3 ? 'max-w-[400px] max-h-[250px]' : height}`
      ></video>
    </div>
    <div
      class='w-full text-white flex flex-col px-4 md:pr-[10.5px] md:pl-4.25 gap-1.25 lg:gap-3 lg:pl-5 lg:pr-3 xl:px-8 xl:gap-3.5 h-fit lg:justify-end'
    >
      <h3
        class='font-medium text-[14px] lg:text-[16px] xl:text-[19px] capitalize'
      >
        {title}
      </h3>
      <p class='opacity-70 text-[13px] lg:text-[14px] xl:text-[16px]'>
        {content}
      </p>
    </div>
  </div>
</div>
