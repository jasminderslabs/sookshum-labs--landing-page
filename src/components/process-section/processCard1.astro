---
const { src, title, content } = Astro.props;
---

<div
  class='h-auto rounded-4xl gap-2 xl:pb-8 card bg-[#282828B2] flex flex-col justify-between dark-btn-shadow dropdown-bg dropdown-shadow-button'
>
  <div class='w-full flex justify-center'>
    <video
      autoplay
      loop
      muted
      src={src}
      class='object-fill h-full w-full rounded-4xl'
    ></video>
  </div>
  <div class='w-full text-white flex flex-col gap-2 xl:px-8 xl:gap-[10px]'>
    <h3 class='hero-heading xl:text-[19px] capitalize'>
      {title}
    </h3>
    <p class='opacity-70'>
      {content}
    </p>
  </div>
</div>
