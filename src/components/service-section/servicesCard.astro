---
import Button from "../button/Button.astro";

const { src, title, content } = Astro.props;
---

<div
  class='w-full h-auto rounded-4xl hover:bg-linear-to-br! from-[#e6862466] via-transparent to-[#e6862466] card bg-[#282828B2] flex flex-col justify-between items-center'
>
  <div
    class='w-full h-full rounded-[20px] bg-[#1c1c1c] lg:rounded-4xl pb-6 xl:pb-8 xl:gap-2'
  >
    <div class='w-full flex justify-center xl:h-88.5 video-container'>
      <video
        src={src}
        muted
        class='object-cover w-full h-full rounded-4xl'
      ></video>
    </div>
    <div class='w-full text-white flex flex-col px-5 xl:px-8 xl:gap-2.5'>
      <h3 class='hero-heading text-[14px] xl:text-[19px] capitalize'>
        {title}
      </h3>
      <p class='opacity-70 text-[13px] xl:text-[16px]'>
        {content}
      </p>
      <Button text='Discover' />
    </div>
  </div>
</div>
