---
import Button from "../button/Button.astro";

const { src, title, content } = Astro.props;
---

<div
  class='w-full h-auto rounded-4xl hover:bg-linear-to-br! from-[#e6862466] via-transparent to-[#e6862466] card bg-[#282828B2] flex flex-col justify-between items-center p-1 border border-[#1c1c1c] dark-btn-shadow dropdown-bg dropdown-shadow-button'
>
  <div
    class='w-full h-full rounded-[20px] bg-[#1c1c1c] lg:rounded-4xl pb-6 xl:pb-8 flex flex-col dark-btn-shadow dropdown-bg dropdown-shadow-button gap-2'
  >
    <div
      class='w-full flex justify-center h-59.75 md:h-65.25 lg:h-55.25 xl:h-83.5 2xl:h-88.5 video-container'
    >
      <video
        src={src}
        muted
        class='object-cover w-full h-full rounded-4xl'
      ></video>
    </div>

    <div class='flex flex-col gap-3 justify-between grow'>
      <div
        class='w-full text-white flex flex-col px-4 md:px-6 lg:px-4 xl:px-8 gap-1 lg:gap-3 xl:gap-3.5'
      >
        <h3
          class='hero-heading text-[14px] lg:text-[16px] xl:text-[19px] capitalize'
        >
          {title}
        </h3>
        <p
          class='opacity-70 text-[13px] lg:text-[14px] xl:text-[16px] pb-2.5 lg:leading-5'
        >
          {content}
        </p>
      </div>
      <div class='px-4 md:px-6 lg:px-4 xl:px-8 lg:gap-1 xl:gap-3.5'>
        <Button text='Discover' />
      </div>
    </div>
  </div>
</div>
