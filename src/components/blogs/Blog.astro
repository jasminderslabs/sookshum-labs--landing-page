---
import TopSection from "../top-section/Topsection.astro";
const topSectionContent = {
  heading: "See our recent | posts",
  word: "Blog",
  para: `Explore our blog to discover the latest industry trends and and gain
      valuable insights from our team of experts`,
  btnText: "Blog",
};
---

<section
  class='flex flex-col items-center gap-10 w-full max-w-480 mx-auto px-5 md:px-10 xl:px-20 md:pt-17.5 pt-15 lg:pt-22.5 xl:pt-30'
>
  <TopSection {...topSectionContent} />

  <div
    class='flex mx-auto w-full overflow-x-auto no-scrollbar snap-x snap-mandatory'
  >
    <div class='flex flex-nowrap gap-6 pb-6 w-auto'>
      <div
        class='w-[70vw] md:w-123 shrink-0 snap-center bg-[#282828B2] p-3 rounded-4xl overflow-hidden aspect-3/4'
      >
        <img
          src='/blogImg1.png'
          class='w-full h-full object-cover rounded-4xl'
        />
      </div>

      <div class='flex flex-col justify-between w-[85vw] md:w-150 shrink-0'>
        <div class='p-3 rounded-4xl bg-[#282828B2] shrink-0 flex h-[45%]'>
          <div
            class='flex flex-row items-center bg-[#FCCE62] rounded-4xl overflow-hidden h-full'
          >
            <img
              src='blogImg2.png'
              class='w-1/2 h-full object-contain shrink-0 rounded-4xl'
            />
            <div
              class='p-4 md:p-8 overflow-hidden h-full flex flex-col justify-end'
            >
              <span class='text-lg md:text-xl font-bold block truncate'
                >Found's Digital Journey</span
              >
              <p class='text-sm line-clamp-2'>
                Join us on a journey of innovation and transformation ...
              </p>
            </div>
          </div>
        </div>

        <div class='p-3 rounded-4xl bg-[#282828B2] shrink-0 flex h-[45%]'>
          <div
            class='flex flex-row items-center bg-[#111717] text-white rounded-4xl overflow-hidden h-full'
          >
            <img
              src='blogImg3.png'
              class='w-1/2 h-full object-contain shrink-0 rounded-4xl'
            />
            <div class='p-4 md:p-8 overflow-hidden h-full'>
              <span class='text-lg md:text-xl font-bold block truncate'
                >Found's Digital Journey</span
              >
              <p class='text-sm opacity-70 line-clamp-2'>
                Join us on a journey of innovation and transformation ...
              </p>
            </div>
          </div>
        </div>
      </div>

      <div
        class='w-[70vw] md:w-150.5 shrink-0 snap-center bg-[#282828B2] p-3 rounded-4xl overflow-hidden aspect-4/3'
      >
        <img
          src='/blogImg4.png'
          class='w-full h-full object-cover rounded-4xl'
        />
      </div>
    </div>
  </div>
</section>
